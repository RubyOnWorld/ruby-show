<% if current_user.courses.include?(@course) %>
  $(<%= dom_id @course %>).html(
    '<%= j link_to "Я здесь не учился!".html_safe, graduate_course_path(@course), class: "btn btn-success", remote: true, method: :post %>'
    );
  $('.course-title').append('<i class="glyphicon glyphicon-ok" id="course-done"></i>');
<% else %>
  $(<%= dom_id @course %>).html(
    '<%= j link_to "Я здесь учился".html_safe, graduate_course_path(@course), class: "btn btn-success", remote: true, method: :post %>'
    );
  $('#course-done').remove();
<% end %>
