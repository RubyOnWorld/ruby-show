<div class="col-md-6 col-md-offset-3">
  <%= form_for @course, html: { class: 'form-horizontal center' } do |f| %>
    <div class='form-group'>
      <%= f.label :title, 'Название' %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :description, 'Описание' %><br>
      <%= f.text_area :description, rows: 10, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :language, 'Язык' %><br>
      <%= f.select(:language, %w(Русский English), {}, { class: 'form-control' }) %>
    </div>
    <div class="actions">
      <%= f.submit 'Добавить курс', class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
