<p id="notice"><%= notice %></p>

<h1>Рейтинг курсов</h1>

<table class='table table-bordered table-hover'>
  <thead>
    <tr>
      <th>Название</th>
      <th>Язык обучения</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, course %></td>
        <td><%= course.language %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

