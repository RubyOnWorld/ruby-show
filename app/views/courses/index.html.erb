<div class="col-md-12" id='paid'>
  <table class='table table-bordered table-hover'>
    <thead>
      <tr>
        <th colspan='3' class='text-center'>Платные курсы</th>
      </tr>
      <tr>
        <th>#</th>
        <th>Название</th>
        <th>Количество учеников</th>
      </tr>
    </thead>

    <tbody>
      <% @paid_courses.each.with_index(1) do |course, index| %>
        <tr>
          <td><%= index %></td>
          <td>
            <%= link_to course.title, course %>
            <span class="rating" data-toggle='tooltip' data-placement='top' title='Средний рейтинг курса'>
              <%= rating_in_gems(course.rating) %>
            </span>
          </td>
          <td>
            <%= course.users.count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

