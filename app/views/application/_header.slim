nav.navbar.navbar-default
  .container
    .navbar-header
      button { class = 'navbar-toggle collapsed'
               type = 'button'
               data-toggle = 'collapse'
               data-target = '#navbar-collapse'
               aria-expanded = 'false'
             }
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      = link_to 'Ruby Courses', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse id='navbar-collapse'
      ul.nav.navbar-nav
        li = link_to 'Последние отзывы', comments_path
      ul.nav.navbar-nav.navbar-right
        p.navbar-text Курсы:
        li = link_to 'Все', courses_path
        li = link_to 'Платные', courses_path(paid: '1')
        li = link_to 'Бесплатные', courses_path(paid: '0')
        li = link_to 'Добавить', new_course_path,
                     title: "Количество курсов на рассмотрении: #{unapproved_courses_amount}",
                     data: { toggle: 'tooltip', placement: 'bottom' }

        - if mimic_user.present?
          li.dropdown
            a.dropdown-toggle href='#' data-toggle='dropdown'
              i.glyphicon.glyphicon-th-large
              span.caret
            ul.dropdown-menu role='menu'
              li = link_to 'Настройки', edit_user_registration_path
              li = link_to 'Выход', destroy_user_session_path, data: { method: :delete }
        - else
          li.dropdown
            a.dropdown-toggle href='#' data-toggle='dropdown'
              i.glyphicon.glyphicon-lock
              span.caret
            ul.dropdown-menu role='menu'
              li = link_to 'Вход', new_user_session_path
              li = link_to 'Регистрация', new_user_registration_path
